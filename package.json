{
  "name": "@snowplow/react-native-tracker",
  "version": "0.2.0",
  "description": "A library for tracking Snowplow events in React Native",
  "homepage": "https://docs.snowplowanalytics.com/docs/collecting-data/collecting-from-own-applications/react-native-tracker/",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "rimraf dist && tsc -p .",
    "bundle": "rollup --config",
    "build": "npm run compile && npm run bundle && rimraf dist/tmp",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "bootstrap": "npm run build && cd DemoApp && rimraf node_modules && yarn"
  },
  "files": [
    "src",
    "dist",
    "android",
    "ios"
  ],
  "keywords": [
    "react-native",
    "snowplow"
  ],
  "author": "Snowplow Analytics Ltd",
  "contributors": [
    "Michael Hadam",
    "Colm O Griobhtha",
    "James Munro",
    "Max Bondarenko",
    "Paul Boocock"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowplow-incubator/snowplow-react-native-tracker"
  },
  "peerDependencies": {
    "react": ">=16.8.6",
    "react-native": ">=0.59.8"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.11",
    "@types/react-native": "^0.64.10",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.28.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.0.6",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.1",
    "rollup-plugin-dts": "^3.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/**/*test.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/DemoApp/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tests/tsconfig.json"
      }
    }
  }
}
